@using BlogApp.Entities.Dtos;
@model CategoryAddDto
<div class="modal fade" role="dialog" area-hidden="true" tabindex="-1">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title"><span class="fas fa-plus"></span>  Kategori Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-area="Admin" asp-controller="Category" asp-action="Add" id="form-categoy-add" method="post">
            <div class="modal-body">
               
                    <div class="form-group">
                        <label class="check-form-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" />
                        <span class="text-danger"asp-validation-for="Name"></span>

                    </div>
                     <div class="form-group">
                        <label class ="check-form-label" asp-for="Description"></label>
                        <input class="form-control" asp-for="Description" />
                        <span class="text-danger"asp-validation-for="Description"></span>

                    </div>
                    <div class="form-group">
                        <label class="check-form-label" asp-for="Note"></label>
                        <input class="form-control" asp-for="Note" />
                        <span class="text-danger" asp-validation-for="Note"></span>

                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" asp-for="IsActive" />
                        <label asp-for="IsActive" class="check-form-label"></label>
                        <span class="text-danger" asp-validation-for="IsActive"></span>

                    </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="submit"  class="btn btn-primary btn-block" ><span class="fas fa-save"></span> Kaydet</button>

            </div>
            </form>
        </div>
    </div>
</div>