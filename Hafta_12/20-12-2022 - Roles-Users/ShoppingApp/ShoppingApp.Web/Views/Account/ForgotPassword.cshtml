@model LoginDto

<h1>Şifremi Unuttum</h1>
<hr />
<form 
    asp-controller="Account" 
    asp-action="ForgotPassword" 
    method="post">

    <div class="row">
        <div class="col-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Kayıtlı email adresinizi giriniz.</label>
                <input class="form-control" name="email" type="email" />
            </div>
            <button type="submit" class="btn btn-primary">Şifre Sıfırlama Linkini Gönder</button>
            <a type="submit" class="btn btn-warning" asp-controller="Home" asp-action="Index">Vazgeç</a>
        </div>
    </div>
</form>
