@model CategoryAddDto

<h1>Yeni Kategori Ekleme</h1>
<hr />
<form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post">
    <div class="row">
        <div class="col-4">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input class="form-control" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button> @*Submit olduğu için çalıştığında form un post kısmına gidiyor ve verileri oraya aktarıyor.*@
            <a type="submit" class="btn btn-warning" asp-area="Admin" asp-controller="Category" asp-action="Index">Vazgeç</a>
        </div>
    </div>
</form>