@model CategoryDeleteDto

<h1>Kategori Düzenleme</h1>
<hr />
<form asp-area="Admin" asp-controller="Category" asp-action="Delete" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div class="col-4">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input class="form-control" asp-for="Name" disabled>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input class="form-control" asp-for="Description" disabled>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger">Sil</button>
        </div>
    </div>
</form>