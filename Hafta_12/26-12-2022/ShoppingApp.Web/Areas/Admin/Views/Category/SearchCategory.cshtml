@model CategoryListDto

@ViewBag.Title
<hr />
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Category)
        {
            <tr>
                <td>@category.</td>
                <td>@category.</td>
                <td>@category.</td>
                <td>
                    <a class="btn btn-warning btn-sm"
                   asp-area="Admin"
                   asp-controller="Category"
                   asp-action="Edit"
                   asp-route-id=@category.Category.Id>Düzenle</a>
                    <a class="btn btn-danger btn-sm"
                   asp-area="Admin"
                   asp-controller="Category"
                   asp-action="Delete"
                   asp-route-id=@category.Id>Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>