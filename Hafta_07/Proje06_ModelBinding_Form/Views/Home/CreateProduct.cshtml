@model Product
@{
    ViewData["Title"] = "CreateProduct";
}
<h1 class="Display-6">Create Product</h1>
<hr>

<form asp-controller="Home" asp-action="CreateProduct" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label >Product Name :</label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Name">

        </div>
    </div>
     <div class="row mb-2">
        <div class="col-2">
            <label >Product Category :</label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Category">

        </div>
    </div> 
    
    <div class="row mb-2">
        <div class="col-2">
            <label >Product Price :</label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Price">

        </div>
    </div>

     <div class="row mb-2">
        <div class="col-2">
            <label class="form-check-label">Is Aprroved :</label>
        </div>
        <div class="col-4">
            <input class="form-check-input" type="checkbox" asp-for="IsApproved">
        </div>
    </div>
     
     <div class="row text-end">
        <div class="col-6">
            <input  class="btn btn-success" type="submit" value="Create">
        </div>
            

        </div>
    </div>
</form>
@if (Model != null)
{
    <hr>
<div>
    <p>@Model.Name Eklendi</p>
    <p>@(Model.IsApproved ? "Onaylı" : "Onaylı Değil")</p>
</div>
}
