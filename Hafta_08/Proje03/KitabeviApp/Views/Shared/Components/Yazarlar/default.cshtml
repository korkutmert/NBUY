@model List<Yazar>
    <h4 class="mb-3 text-primary">Yazarlar</h4>

    <div class="list-group">
        @foreach (var y in Model)
        {
           <a asp-controller="Home" asp-action="YazaraGoreKitapListesi" asp-route-id=@y.Id class="list-group-item list-group-item-action @(ViewBag.SeciliYazar==y.Id ? "active" : "")">
             @y.Ad
           </a>
        }
    </div>
