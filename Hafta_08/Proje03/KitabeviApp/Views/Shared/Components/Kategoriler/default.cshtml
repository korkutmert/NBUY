@model List<Kategori>
    <h4 class="mb-3 text-primary">Kategoriler</h4>

<div class="list-group">
    @foreach (var k in Model)
    {
        <a asp-controller="Home" asp-action="KategoriyeGoreKitapListesi" asp-route-id=@k.Id class="list-group-item list-group-item-action @(ViewBag.SeciliKategori==k.Id ? "active" : "") ">
            @k.Ad
        </a>
    }
</div>