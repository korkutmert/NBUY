@model List<Kitap>
@{
    ViewData["Title"] = "Kitap Listesi";
}

<h1 class="display-6">Kitap Listesi</h1>
<hr>
<a asp-controller="Home" asp-action="KitapEkle" class="btn btn-outline-primary">Yeni Kitap</a>
<hr>
<div class="container">
    <div class="row">
     
    </div>
</div>

   
   <table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kitap Adı</th>
            <th>Basım Yılı</th>
            <th>Sayfa Sayısı</th>
            <th>Kategori</th>
            <th>Yazar</th>
            
            <th width="297">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td>@k.Ad</td>
                <td>@k.BasimYili</td>
                <td>@k.SayfaSayisi</td>
                <td>@k.Kategori.Ad</td>
                <td>@k.Yazar.Ad</td>
                


                <td>
                    <a class="btn btn-sm btn-warning me-2" asp-controller="Home" asp-action="KitapGuncelle" asp-route-id=@k.Id>Güncelle</a>
                    <a class="btn btn-sm btn-danger me-2" asp-controller="Home" asp-action="KitapSil" asp-route-id=@k.Id>Sil</a>
                    <a asp-controller="Home" asp-action="Detay" asp-route-id=@k.Id class="btn btn-sm btn-info me-2">İncele</a>
                    <a class="btn btn-sm btn-success">Sepete Ekle</a>

                </td>
            </tr>
        }
    </tbody>
</table>
   
   
   
   
   
