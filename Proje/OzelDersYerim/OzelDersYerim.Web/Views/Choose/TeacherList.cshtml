@using OzelDersYerim.Web.Models.Dtos;
@model List<TeacherDto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">ÖZEL DERS YERİM</h1>
</div>

<div class="mt-4 row">
    <div class="col-3">

        @await Component.InvokeAsync("Branches")
    </div>
    <div class="col-9">
        <div class="row">
            @foreach (var teacherDto in Model)
            {
                <div class="col-md-4">
                    @await Html.PartialAsync("_TeacherPartial", teacherDto)
                </div>
            }
        </div>
    </div>
</div>

