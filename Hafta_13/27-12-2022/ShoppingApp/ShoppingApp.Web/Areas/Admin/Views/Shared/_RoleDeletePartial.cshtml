@model RoleDto



<!-- Button trigger modal -->
<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalRoleDelete_@Model.Id">
    Sil
</button>

<!-- Modal -->
<div class="modal fade" id="modalRoleDelete_@Model.Id" tabindex="-1" aria-labelledby="modalLabelRoleDelete_@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabelRoleDelete_@Model.Id">Dikkat!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <strong>@Model.Name</strong> adlı rolü silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <a class="btn btn-primary"
                   id="ModelDeleteForm_@Model.Id"
                   asp-area="Admin"
                   asp-controller="Role"
                   asp-action="Delete"
                   asp-route-id="@Model.Id">
                    Evet
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
            </div>
        </div>
    </div>
</div>

