@model List<CategoryViewModel>

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori</th>
            <th>Açıklama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
        </tr>
        }
    </tbody>
</table>